# AWS/S3-Compatible Credentials
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# S3 Bucket
S3_BUCKET=your-bucket-name

# Optional: Keep files under a prefix (e.g., "dev")
S3_ROOT_PREFIX=

# Optional second endpoint config (used by `/api/s3-media`)
S3_MEDIA_BUCKET=your-media-bucket-name
S3_MEDIA_ROOT_PREFIX=

# ─────────────────────────────────────────────────────────
# For S3-compatible storage (Cloudflare R2, MinIO, etc.)
# ─────────────────────────────────────────────────────────
# S3_ENDPOINT=https://<account_id>.r2.cloudflarestorage.com
# S3_FORCE_PATH_STYLE=1
# AWS_REGION=auto

# Optional: Require x-user-id header for authorization
# REQUIRE_USER_ID=1
